<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.KeMovie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_orig"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_orig_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KeMovie">
        <activity
            android:name="com.example.KeMovie.MovieDetailActivity"
            android:exported="true"
            android:parentActivityName="com.example.KeMovie.MainActivity"/>
        <activity
            android:name="com.example.KeMovie.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>